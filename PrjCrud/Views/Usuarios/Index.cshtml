@model IEnumerable<PrjCrud.Models.Usuario>

@{
    ViewBag.Title = "Lista de Usuários";
}

<h2>Lista de Usuários</h2>


@Html.ActionLink("Novo Usuário", "Create", "Create", new { @class = "btn btn-primary" })

<table class="table">
    <tr>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th class="text-center">Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="text-center">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.ValueFor(modelItem => item.DataNascimento, "{0:dd/MM/yyyy}")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>

                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-xs btn-default"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>

            
        </tr>
    }

</table>